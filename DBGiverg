 <script>



 function pushFunction(){
  var locale;
  if(!navigator.geolocation){
    output.innerHTML = "<p>Geolocation is not supported by your browser.</p>";
    return;
  }
  success = function(position){
    var myDataRef = new Firebase('https://lavoratr.firebaseio.com/');


    var locationInBuilding = $('#locInBuilding').val();
    var nameOfLocation = $('#nolInput').val();
    var typeOfLocation = $('#typeLocation').val();
    var quality = $('#Quality').val();
    var numRatings = 1;
    var gender = $('#typeGender').val();
    var accesible = $('#isAccesible').is(':checked')
    var station = $('#hasStation').is(':checked')
    var commentBox = $('#commentBox').val();
    var numStalls = $('#stallNumber').val();
    var numUrinals = $('#urinalNumber').val();
    var numSinks = $('#sinkNumber').val();
    var lat = position.coords.latitude;
    var lng = position.coords.longitude;

         myDataRef.push({nameOfLocation: nameOfLocation, locationInBuilding: locationInBuilding, comment: commentBox, numbStalls: numStalls, numUrinals: numUrinals, numSinks: numSinks, gender: gender, station: station, accesible: accesible, typeOfLocation: typeOfLocation, quality: quality, numRatings: numRatings, latitude: lat, longitude: lng});
         $('#nolInput').val('');
         $('#locInBuilding').val('');
         $('#typeLocation').val('');
         $('#typeGender').val('');
         $('#isAccesible').val(':unchecked')
         $('#hasStation').val(':unchecked')
         $('#commentBox').val('');
         $('#stallNumber').val('');
         $('#urinalNumber').val('');
         $('#sinkNumber').val('');


       };

       error = function(err){
        console.warn(err.code + " " + err.message);
      };
      
      navigator.geolocation.getCurrentPosition(success, error);



    };

    
    </script>
